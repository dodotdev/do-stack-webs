{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rimraf dist && swc src --out-dir dist",
    "clean": "rimraf .turbo && rimraf node_modules && rimraf dist",
    "dev": "tsnd --respawn --transpile-only src/app.ts --swc",
    "lint": "tsc --noEmit && eslint \"**/*.{ts,tsx}\"",
    "start": "NODE_ENV=production node dist/app.js",
    "test": "jest --detectOpenHandles",
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:seed": "ts-node src/scripts/seeder.ts"
  },
  "dependencies": {
    "@acme/utils": "workspace:*",
    "@fastify/autoload": "^5.7.1",
    "@fastify/sensible": "^5.2.0",
    "@mgcrea/fastify-request-logger": "^1.1.1",
    "@mgcrea/pino-pretty-compact": "^1.3.0",
    "dotenv": "^16.3.1",
    "fastify-plugin": "^4.5.1",
    "fastify": "^4.21.0",
    "zennv": "^0.1.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@library/eslint-config": "workspace:*",
    "@acme/jest-presets": "workspace:*",
    "@library/typescript-config": "workspace:*",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.76",
    "@swc/helpers": "^0.5.1",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.10",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "5.1.6"
  },
  "jest": {
    "preset": "@acme/jest-presets/node",
    "testPathIgnorePatterns": [
      "scripts"
    ],
    "transform": {
      "^.+\\.test.(t|j)s?$": "@swc/jest"
    }
  }
}

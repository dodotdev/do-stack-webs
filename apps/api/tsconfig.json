{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@library/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}

{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@pkg/ui/*": ["../../packages/ui/src/*"],
      "@pkg/ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@pkg/ui/components/ui/*": ["../../packages/ui/src/components/ui/*"]
    }
  }
}
